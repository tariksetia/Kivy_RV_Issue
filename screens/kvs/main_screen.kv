#: import utils kivy.utils



<SidebarToggleButton@ToggleButton>
    background_normal: '' 
    background_down: ''
    background_color: (1,1,1,0) if self.state=='normal' else utils.get_color_from_hex('#2638C4')
    opacity: 1 if self.state=='normal' else 1
    color:  utils.get_color_from_hex('#FFFFFF')
    font_size: sp(16)
    halign: 'left'
    size_hint_y: None
    markup: True
    height: self.texture_size[1] + sp(30)

<Ipas>
    cols: 2
    GridLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: './sidebar_back.png'
        cols:1
        spacing: sp(10),sp(10)
        size_hint_x:None
        width: sp(250)
        
        
        GridLayout:
            cols:1
            spacing: sp(5),sp(5)
          
            
            SidebarToggleButton:
                group: 'sidebar'
                text: "% Alert List "
                id: btn_alert_list
                on_state: screen_manager.show_alert_list()
    
            SidebarToggleButton:
                group: 'sidebar'
                text: "CMAC_Prcocessor" 
                on_state: screen_manager.current = 'tscreen'

    
    
     

    GridLayout:
        cols: 2
        id : temp
        MainScreenManager:
            id: screen_manager
